#!/usr/bin/env bash
#
NAMESPACE=${1:-default}
TMPDIR=$(mktemp -d)

function cleanup() {
rm -rf $TMPDIR
}
trap cleanup EXIT

ssh-keygen -C 'cryosparc@master' -f ${TMPDIR}/id_ed25519 -N '' -t ed25519

kubectl -n $NAMESPACE create secret generic cryosparc-user \
--from-file=ssh-privatekey=${TMPDIR}/id_ed25519 \
--from-file=ssh-publickey=${TMPDIR}/id_ed25519.pub
