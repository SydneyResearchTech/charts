{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "properties": {
    "client": {
      "description": "Client site that responds to Serverâ€™s task assignments and performs learning actions based on its local data."
    },
    "image": {
      "description": "Container Image",
      "properties": {
        "repo": {"type": "string"},
        "tag": {"type": "string"}
      },
      "type": "object"
    },
    "server": {
      "description": "Server site responsible for client coordination based on federation workflows.",
