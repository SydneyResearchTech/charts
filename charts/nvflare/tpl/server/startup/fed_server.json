{
  "format_version": 2,
  "servers": [
    {
      "name": {{ .Values.project.name | toJson }},
      "service": {
        "target": {{ include "nvflare.server.service_target" . | toJson }},
        "scheme": "grpc"
      },
      "admin_host": {{ include "nvflare.server.service" . | toJson }},
      "admin_port": {{ .Values.server.service.admin.port }},
      "ssl_private_key": "server.key",
      "ssl_cert": "server.crt",
      "ssl_root_cert": "rootCA.pem"
    }
  ],
  "overseer_agent": {
    "path": "nvflare.ha.dummy_overseer_agent.DummyOverseerAgent",
    "args": {
      "sp_end_point": {{ include "nvflare.server.sp_endpoint" . | toJson }}
    }
  }
}
