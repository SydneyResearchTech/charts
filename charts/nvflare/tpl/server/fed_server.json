{
  "format_version": 2,
  "servers": [
    {
      "name": "{{ .Values.project.name }}",
      "service": {
        "target": "nvflare-server.nvflare.svc.cluster.local:{{ .Values.server.service.fl.port }}",
        "scheme": "grpc"
      },
      "admin_host": "nvflare-server.nvflare.svc.cluster.local",
      "admin_port": {{ .Values.server.service.admin.port }},
      "ssl_private_key": "server.key",
      "ssl_cert": "server.crt",
      "ssl_root_cert": "rootCA.pem"
    }
  ],
  "overseer_agent": {
    "path": "nvflare.ha.overseer_agent.HttpOverseerAgent",
    "args": {
      "role": "server",
      "overseer_end_point": "https://nvflare.fake.sydney.edu.au/api/v1",
      "project": "{{ .Values.project.name }}",
      "name": "nvflare-server.nvflare.svc.cluster.local",
      "fl_port": "{{ .Values.server.service.fl.port }}",
      "admin_port": "{{ .Values.server.service.admin.port }}"
    }
  }
}
